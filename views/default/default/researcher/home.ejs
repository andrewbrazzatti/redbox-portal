<div class="default-page">
  <div class="header">
    <h1 id="main-title" class="container"><%= TranslationService.t('welcome-title') %></h1>
  </div>
<div class="row equal">
  <div class="col-md-1">
  </div>
    <div class="col-md-3 homepanel">
      <div class="panel panel-default">
               <div class="panel-heading text-center">
                   <h4 class="panel-title">
                     <div><img class="overlay" src="<%= BrandingService.getBrandAndPortalPath(req) %>/images/checklist.png" alt="@document.icon" width="43px" height="30px"></div>
                     <%= TranslationService.t('menu-plan')%></h4>
               </div>
               <div class="panel-body">
                 <div><a href="<%= BrandingService.getBrandAndPortalPath(req) %>/record/rdmp/edit"><%= TranslationService.t('create-rdmp')%></a></div>
               </div>
           </div>
    </div>

    <div class="col-md-3 homepanel">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
            <div><i class="fa fa-laptop fa-3x"></i></div>
            <h4 class="panel-title"><%= TranslationService.t('menu-manage')%></h4>
        </div>
               <div class="panel-body">
                  <div><a href="<%= BrandingService.getBrandAndPortalPath(req) %>/dashboard"><%= TranslationService.t('edit-rdmp')%></a></div>
                 <div><a href="<%= BrandingService.getBrandAndPortalPath(req) %>/record/search"><%= TranslationService.t('record-search-link')%></a></div>
                 <!-- <div><a href="<%= BrandingService.getBrandAndPortalPath(req) %>/user/profile"><%= TranslationService.t('user-profile-link')%></a></div> -->
               </div>
           </div>
    </div>
    <div class="col-md-3 homepanel">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
            <div><i class="fa fa-rocket fa-3x"></i></div>
            <h4 class="panel-title"><%= TranslationService.t('menu-publish')%></h4>
        </div>
        <div class="panel-body">
          <div><a href="<%= BrandingService.getBrandAndPortalPath(req) %>/record/transfer/rdmp"><%= TranslationService.t('transfer-ownership-rdmp')%></a></div>
        </div>
      </div>
    </div>
    <div class="col-md-1">
    </div>
</div>
<!-- simple jquery script to make all the panels equal height -->
<script>
  $( document ).ready(function() {
    panels = $('.homepanel .panel-default .panel-body');
    maxHeight = Math.max.apply(
      Math, panels.map(function() {
        return $(this).height();
        }).get());
    panels.height(maxHeight);
  });
</script></div>
